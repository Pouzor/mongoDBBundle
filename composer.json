{
  "name": "pouzor/mongodbbundle",
  "description": "MongoDB Symfony Bundle. This bundle allow you to use in the easiest and fastest way MongoDB in your project with the new php driver (Support php >=5.4 and php 7.x). It's not an ODM",
  "license": "MIT",
  "type": "symfony-bundle",
  "keywords": ["mongo", "mongodb", "symfony", "mongodbbundle"],
  "authors": [
    {
      "name": "Pouzor",
      "email": "remy.jardinet@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": { "Pouzor\\MongoDBBundle\\": "" },
    "exclude-from-classmap": [
      "Tests/"
    ]
  },
  "require": {
    "php": ">=5.4.0",
    "mongodb/mongodb" : "^1.2.0"
  },
  "minimum-stability": "dev",
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "phpunit/php-invoker": "~1.0",
    "symfony/http-kernel": "^3.2",
    "symfony/framework-bundle": "^3.2",
    "symfony/yaml": "^3.2",
    "symfony/console": "^3.2"
  }
}
